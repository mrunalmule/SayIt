<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.android.sayit.pit">
    <Button
        android:text="Search this on web"
        android:layout_height="100dp"
        android:id="@+id/button4"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="match_parent"
        style="@android:style/Widget.Button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_height="wrap_content"
        android:text="pronounce the word"
        android:id="@+id/button"
        android:background="@drawable/circle"
        android:layout_width="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        style="@style/Widget.AppCompat.Button.Borderless"

        android:layout_above="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wd"

        android:hint="Enter Text"
        android:textColorHint="#000000"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
        android:layout_marginBottom="62dp"

        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true" />

    <TextView android:text="Pronounce it " android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview"

        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/wd"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
